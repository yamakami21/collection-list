<div class="container">
    <div class="container-inner inner-default clearfix">

        <% if current_user.items.any? %>
        <div class="item-box">
            <div class="image">
                <div class="img-wrap">
                  <%= link_to item_path(item) do %>
                    <% if item.image? %>
                  　　<%= image_tag item.image.thumb.url %>
                  　<% else %>
                  　<% end %>
                  <% end %>
                </div>
            </div>
    
            <div class="detail">
                <span class="timestamp">
                    Posted <%= time_ago_in_words(item.created_at) %> ago.
                </span>    
                <span class="delete">
                    <% if current_user == item.user %>
                      <%= link_to "削除", item, method: :delete, data: { confirm: "削除します。"}%>
                    <% end %>
                </span>
            </div>
        </div>
        <% end %>
    </div>
</div>