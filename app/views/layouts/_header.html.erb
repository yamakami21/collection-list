<header class="navbar navbar-fixed-top navbar-default">
    <div class="container">
        
    	<div class="navbar-header">
			<button type="button" class="navbar-btn navbar-toggle collapsed" data-toggle="collapse" data-target="#site-menu">
				<span class="sr-only">Toggle navigation</span>
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
			</button>
            <%= link_to "Plaction", root_path, id: "logo", class: "navbar-btn" %>
        </div>
        <nav>
            <div class="collapse navbar-collapse" id="site-menu">
                <ul class="nav navbar-nav navbar-right">
                    <% if logged_in? %>
                        <li><%= link_to "投稿", new_item_path, class: "navbar-btn" %></li>
                        <li class="dropdown">
                            <a href="#"  class="dropdown-toggle navbar-btn" data-toggle="dropdown">
                                <span class="glyphicon glyphicon-th-large"></span> <%= current_user.name %><b class="caret"></b>
                            </a>
                            <ul class="dropdown-menu">
                                <li><%= link_to sanitize('<i class="glyphicon glyphicon-user"></i>') + "　マイページ", user_path(current_user) %></li>
                                <li><%= link_to sanitize('<i class="glyphicon glyphicon-heart"></i>') + "　お気に入り", "#"%></li>
                                <li class="divider"></li>
                                <li>
                                   <%= link_to sanitize('<i class="glyphicon glyphicon-off"></i>') + "　ログアウト", logout_path, method: "delete" %>
                                </li>
                            </ul>
                        </li>
                    <% else %>
                        <li><%= link_to "ログイン", login_path, class: "navbar-btn"  %></li>
                        <li><%= link_to "新規登録", signup_path, class: "btn-info navbar-btn" %></li>
                    <% end %>
                </ul>
            </div>
        </nav>
    </div>
</header>