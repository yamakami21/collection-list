<div>
    <aside class="col-md-6">
        <section class="user_info">
            <h1 class ="text-left">
                <%= @user.name %>
            </h1>
            <%= render 'follow_form' if logged_in? %>
        </section>
    </aside>
    <section class="items">
        <% if @user.items.any? %>
            <h3>植物一覧(<%= @user.items.count%>)</h3>
            <ol class="items">
                <%= render @items %>
            </ol>
        <% end %>
    </section>
</div>